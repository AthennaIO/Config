{
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "compilerOptions": {
    "strict": false,
    "rootDir": ".",
    "outDir": "build",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "downlevelIteration": true,
  },
  "exclude": ["node_modules"]
}
